{
    "private": true,
    "name": "library-management-api",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "author": "apteryxxyz",
    "license": "MIT",
    "scripts": {
        "start": "node dist/index.js",
        "lint": "eslint --ext ts --fix",
        "format": "prettier src/**/*.ts --write",
        "clean": "rimraf dist",
        "build": "tsc",
        "prepare": "husky install"
    },
    "dependencies": {
        "@discordjs/collection": "^1.2.0",
        "@sapphire/shapeshift": "^3.7.0",
        "express": "^4.18.2",
        "lodash": "^4.17.21",
        "uniqid": "^5.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.2.0",
        "@commitlint/config-conventional": "^17.2.0",
        "@types/express": "^4.17.14",
        "@types/lodash": "^4.14.187",
        "@types/node": "^18.11.9",
        "@types/uniqid": "^5.3.2",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "eslint-config-apteryx": "^1.0.6",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "prettier-config-apteryx": "^1.0.0",
        "pretty-quick": "^3.1.3",
        "rimraf": "^3.0.2",
        "ts-config-apteryx": "^1.0.0",
        "typescript": "^4.8.4"
    },
    "prettier": "prettier-config-apteryx",
    "eslintConfig": {
        "plugins": [
            "prettier"
        ],
        "extends": [
            "plugin:prettier/recommended",
            "apteryx",
            "apteryx/typescript"
        ],
        "ignorePatterns": [
            "test/*",
            "examples/*",
            "scripts/*",
            "dist/*",
            "*.config.js"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types"
                ]
            ]
        }
    },
    "lint-staged": {
        "src": "eslint src --fix"
    }
}
