{
    "private": true,
    "name": "library-management-api",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "author": "apteryxxyz",
    "license": "MIT",
    "scripts": {
        "start": "node dist/index.js",
        "lint": "eslint src --fix",
        "format": "prettier src/**/*.ts --write",
        "clean": "rimraf dist",
        "build": "tsc",
        "prepare": "husky install"
    },
    "dependencies": {
        "@discordjs/collection": "^1.2.0",
        "@sapphire/shapeshift": "^3.7.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "fuzzysort": "^2.0.3",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "uniqid": "^5.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.2.0",
        "@commitlint/config-conventional": "^17.2.0",
        "@rushstack/eslint-patch": "^1.2.0",
        "@types/express": "^4.17.14",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/lodash": "^4.14.188",
        "@types/node": "^18.11.9",
        "@types/uniqid": "^5.3.2",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "eslint": "^8.27.0",
        "eslint-config-apteryx": "^2.0.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.6.2",
        "eslint-plugin-n": "^15.5.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-sonarjs": "^0.16.0",
        "eslint-plugin-typescript-sort-keys": "^2.1.0",
        "eslint-plugin-unicorn": "^44.0.2",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "prettier-config-apteryx": "^2.0.1",
        "pretty-quick": "^3.1.3",
        "rimraf": "^3.0.2",
        "ts-config-apteryx": "^2.0.0",
        "typescript": "^4.8.4"
    },
    "prettier": "prettier-config-apteryx",
    "eslintConfig": {
        "extends": ["apteryx/common", "apteryx/node", "apteryx/typescript", "apteryx/prettier"],
        "ignorePatterns": ["test/*", "examples/*", "scripts/*", "dist/*", "*.config.js"]
    },
    "commitlint": {
        "extends": ["@commitlint/config-conventional"],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types"
                ]
            ]
        }
    },
    "lint-staged": {
        "src": "eslint src --fix"
    }
}
